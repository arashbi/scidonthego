<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="auto"
    package="org.scid.android"
    android:versionCode="34"
    android:versionName="1.33" >

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:debuggable="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".ScidApplication" >
        <activity
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:name=".ScidAndroidActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:mimeType="application/x-chess-pgn" />
                <data android:scheme="http" android:host="*"
                    android:pathPattern=".*\\.pgn" />
                <data android:scheme="https" android:host="*"
                    android:pathPattern=".*\\.pgn" />
                <data android:scheme="content" android:host="*"
                    android:pathPattern=".*\\.pgn" />
                <data android:scheme="file" android:host="*"
                    android:pathPattern=".*\\.pgn" />
            </intent-filter>
        </activity>
        <activity
            android:label="Preferences"
            android:name="Preferences" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Edit Board"
            android:name="EditBoard" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Board Search"
            android:name="SearchCurrentBoardActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Header Search"
            android:name="SearchHeaderActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Favorites"
            android:name="FavoritesSearchActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="PGN Import"
            android:name="ImportPgnActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="TWIC Import"
            android:name=".twic.ImportTwicActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="ChessOK Import"
            android:name=".chessok.ImportChessOkActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="ChessOK Import"
            android:name=".chessok.PgnLinkListActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="ChessOK Import"
            android:name=".chessok.ChessOkLinkMapActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Select File"
            android:name=".SelectFileActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Game List"
            android:name="GameListActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Add Engine"
            android:name="AddEngineActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Remove Engine"
            android:name="RemoveEngineActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Save Game"
            android:name="SaveGameActivity" >
        </activity>

        <provider
            android:authorities="org.scid.database.scidprovider"
            android:name="org.scid.database.ScidProvider" />
    </application>

</manifest>